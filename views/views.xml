    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="method_hidropower_informe_entrada_menu" name="Informes Técnicos" parent="repair.menu_repair_order" sequence="1"/>
    <menuitem id="method_hidropower.informe_entrada_menu_act" name="Informe de Entrada" parent="method_hidropower_informe_entrada_menu" action="method_hidropower.informe_entrada_action" sequence="1"/>
    <menuitem id="method_hidropower.informe_salida_menu_act" name="Informe de Salida" parent="method_hidropower_informe_entrada_menu" action="method_hidropower.informe_salida_action" sequence="1"/>
    <menuitem id="method_hidropower.otros_servicios" name="Otros Servicios" parent="method_hidropower_informe_entrada_menu" action="method_hidropower.otros_servicios_action" sequence="1"/>

